<Window x:Class="CanvasDragNDrop.Windows.SchemeSelectionWindow.SchemeSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CanvasDragNDrop.Windows.SchemeSelectionWindow"
        mc:Ignorable="d"
        Title="SchemeSelectionWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="340"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="560"/>
            <ColumnDefinition Width="240"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="1" Margin="10,0,0,0" >
            <Label  Content="Список схем" FontSize="16"/>
            <TextBox Width="250" HorizontalAlignment="Left" Margin="6,0,0,0"/>
        </StackPanel>
        <ItemsControl Grid.Row="2">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <StackPanel Margin="10,0,0,0" >
                            <Label Content="Название схемы"/>
                            <Label Content="Путь к папке" FontSize="10"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="55"/>
                <RowDefinition Height="55"/>
                <RowDefinition Height="55"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Margin="10,0,0,0" >
                <Label Content="Название схемы"/>
                <Label Content="Путь к папке" FontSize="10"/>
            </StackPanel>
            <StackPanel Grid.Row="1"  Margin="10,0,0,0" >
                <Label Content="Название схемы"/>
                <Label Content="Путь к папке" FontSize="10"/>
            </StackPanel>
            <StackPanel Grid.Row="2"  Margin="10,0,0,0" >
                <Label Content="Название схемы"/>
                <Label Content="Путь к папке" FontSize="10"/>
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="2" Grid.Column="1"  Margin="10,10,10,10">
            <Label Content="Начало работы" Margin="10,0,0,0"/>
            <Button Width="200" Height="50" Content="Создать схему" Margin="0,0,0,5"/>
            <Button Width="200" Height="50" Content="Открыть папку со схемой"  Margin="0,0,0,5"/>
            <Button Width="200" Height="50" Margin="0,0,0,5"/>
        </StackPanel>
    </Grid>
</Window>
