<Window x:Class="CanvasDragNDrop.Windows.ErrorSavingSchemaWindow.ErrorSaveSchema"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CanvasDragNDrop.Windows.ErrorSavingSchemaWindow"
        mc:Ignorable="d"
        Title="ErrorSaveSchema" Height="150" Width="250"
        WindowStartupLocation="CenterScreen">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="0.33*"/>
            <RowDefinition Height="0.33*"/>
            <RowDefinition Height="0.33*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="Напишите название схемы."/>
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="0,5,0,0">
            <TextBox Name="TitleSchema" FontSize="15" Width="120" HorizontalAlignment="Center" Text="{Binding Path= Title1}"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Margin="0,5,0,0">
            <Button Height="20" Width="90" Content="Сохранить" HorizontalAlignment="Center" Click="SaveTitleSchemaButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
