<Window x:Class="CanvasDragNDrop.Windows.NewSchemaTitleEnteringWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Ввод имени для новой схемы" Width="350"
        Name="SaveNewSchemaTitleWindowUI"
        WindowStartupLocation="CenterScreen" Height="115">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Content="Введите название для новой схемы" HorizontalContentAlignment="Center" Margin="5"/>
        <StackPanel Grid.Row="1">
            <TextBox Name="TitleSchema" FontSize="15" Margin="10,5,10,5" Text="{Binding ElementName=SaveNewSchemaTitleWindowUI,Path=SchemaName, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Button Content="Сохранить" Margin="10,5,10,5" Click="SaveTitleSchemaButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
